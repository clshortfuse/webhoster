{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "types",
    "outDir": "/dev/null",
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node"
  },
  "include": [
    "./data/*",
    "./errata/*",
    "./examples/*",
    "./helpers/*",
    "./lib/*",
    "./middleware/*",
    "./polyfill/*",
    "./templates/*",
    "./utils/*"
  ],
  "exclude": [
    "**/node_modules/*",
    "**/test/*"
  ]
}